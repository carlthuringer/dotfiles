[hub]
  protocol = https

[credential]
  helper = /opt/boxen/bin/boxen-git-credential

[core]
  excludesfile = /opt/boxen/config/git/gitignore
	autocrlf = input

[user]
  name = Carl Thuringer
  email = carl@groupon.com
[diff]
[color]
  ui = auto
[alias]
  st = status
  ci = commit
  co = checkout
  di = diff -M -C -D
  dc = diff --cached -M -C -D
  amend = commit --amend
  aa = add --all
  ff = merge --ff-only
  pullff = pull --ff-only
  noff = merge --no-ff
  fa = fetch --all
  pom = push origin master
  b = branch
  ds = diff --stat=160,120
  dh1 = diff HEAD~1
  head = !git l -1
  h = !git head
  r = !git l -30
  ra = !git r --all
  l = log --graph --decorate --oneline
  la = !git l --all
  fall = fetch --all
  pickaxe = "!f() {git log --graph --decorate --oneline -p -S '$1'}; f"

# Fancy logging.
#   h = head
#   hp = head with patch
#   r = recent commits, only current branch
#   ra = recent commits, all reachable refs
#   l = all commits, only current branch
#   la = all commits, all reachable refs


[merge]
	tool = vimdiff
[push]
	default = simple
[diff]
	tool = vimdiff
